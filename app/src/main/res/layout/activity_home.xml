<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/password_dt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202732"
    android:orientation="vertical"
    tools:context=".Login"
    tools:ignore="ExtraText">

    <TextView
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/butler_regular"
        android:text="Home"
        android:textSize="60sp" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:text="A donde Desea ir?"
        android:textSize="20sp" /><![CDATA[

    />

    ]]>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="100"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/taskbtn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="@color/btn_color"
            android:text="Crear Tarea"
            android:textColor="@color/white"
            android:layout_marginBottom="-50dp"/>

        <Button
            android:id="@+id/editTaskbtn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="@color/btn_color"
            android:text="Editar Tarea"
            android:textColor="@color/white"
            android:layout_marginBottom="-50dp"/>

        <Button
            android:id="@+id/login_btn3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="@color/btn_color"
            android:text="En espera"
            android:textColor="@color/white"
            android:layout_marginBottom="-50dp"/>

    </LinearLayout>


</LinearLayout>